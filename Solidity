pragma solidity ^0.4.19;

contract starBuilder {

    uint solDigits = 21;
    uint solModulus = 10 ** solDigits;

    struct Star {
        string name;
        uint sol;
    }

    Star[] public stars;

    function _createStar(string _name, uint _sol) private {
        stars.push(Star(_name, _sol));
    } 
    function _generateRandomSol(string _str) private view returns (uint) {
        uint rand = uint(keccak256(_str));
        return rand % solModulus;
    }
contract planetBuilder {

    uint terraDigits = 24;
    uint terraModulus = 10 ** terraDigits;

    struct Planet {
        string name;
        uint terra;
    }

    Planet[] public planets;

    function _createPlanet(string _name, uint _terra) private {
        planets.push(Planet(_name, _sol));
    } 
    function _generateRandomTerra(string _str) private view returns (uint) {
        uint rand = uint(keccak256(_str));
        return rand % terraModulus;
    }
